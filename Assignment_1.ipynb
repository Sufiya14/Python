      "source": [
        "# To count the occurence of vowels in a sentence\n",
        "Sentence=input(\"Enter a sentence \").lower()\n",
        "Vowel_count={}\n",
        "for vowel in \"aeiou\":\n",
        "    count=Sentence.count(vowel)\n",
        "    if count!=0:\n",
        "      Vowel_count[vowel]=count\n",
        " \n",
        "print(Vowel_count)"
      ],
